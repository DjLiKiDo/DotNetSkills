# DotNetSkills - Environment Variables Configuration
# Copy this file to .env and set REAL, secure values locally.
# DO NOT commit real secrets anywhere. This is a template only.

#=====================================
# ENVIRONMENT CONFIGURATION
#=====================================
# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

#=====================================
# DATABASE CONFIGURATION
#=====================================
# SQL Server Database Settings
DB_SA_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=DotNetSkills_Dev
DB_PORT=1433

# Database Behavior Settings
DB_ENABLE_SENSITIVE_LOGGING=false
DB_ENABLE_DETAILED_ERRORS=false
DB_ENABLE_QUERY_LOGGING=false

#=====================================
# API CONFIGURATION
#=====================================
# API Port Configuration
API_PORT=8080

# Database Migration and Seeding
RUN_MIGRATIONS=true
SEED_DATA=true

#=====================================
# JWT AUTHENTICATION
#=====================================
# JWT Settings
JWT_ENABLED=true
JWT_ISSUER=https://localhost:8080
JWT_AUDIENCE=dotnetskills-api
JWT_SIGNING_KEY=CHANGE_ME_TO_A_SECURE_256_BIT_KEY
JWT_TOKEN_LIFETIME_MINUTES=60

#=====================================
# CORS CONFIGURATION
#=====================================
CORS_POLICY_NAME=AllowAll
CORS_ALLOW_CREDENTIALS=false

#=====================================
# SWAGGER/API DOCUMENTATION
#=====================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=DotNetSkills API
SWAGGER_VERSION=v1

#=====================================
# PERFORMANCE MONITORING
#=====================================
PERF_SLOW_THRESHOLD=500
PERF_VERY_SLOW_THRESHOLD=2000
PERF_ENABLE_METRICS=true
PERF_LOG_OPERATION_START=false

#=====================================
# REDIS CACHE (Optional)
#=====================================
# Redis Cache Settings (for cache profile)
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_PORT=6379

#=====================================
# AZURE DEPLOYMENT SETTINGS
#=====================================
# These variables are used when deploying to Azure
# Leave empty for local development

# Azure Key Vault (Production)
AZURE_KEY_VAULT_URI=

# Azure Application Insights (Production)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure SQL Database (Staging/Production)
AZURE_SQL_CONNECTION_STRING=

#=====================================
# DOCKER COMPOSE PROFILES
#=====================================
# Available profiles:
# - default: API + Database
# - cache: includes Redis cache
# - full: includes all services

# To use profiles:
# docker-compose --profile cache up -d
# docker-compose --profile full up -d